{
  "name": "enhancedwdl",
  "displayName": "EnhancedWDL",
  "description": "Professional syntax highlighting and language support for WDL (Workflow Description Language) files with enhanced features",
  "version": "0.0.3",
  "publisher": "pzweuj",
  "repository": {
    "type": "git",
    "url": "https://github.com/pzweuj/EnhancedWDL"
  },
  "keywords": [
    "wdl",
    "workflow",
    "bioinformatics",
    "syntax highlighting",
    "cromwell",
    "genomics"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:wdl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "wdl",
        "aliases": [
          "WDL",
          "Workflow Description Language"
        ],
        "extensions": [
          ".wdl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wdl",
        "scopeName": "source.wdl",
        "path": "./syntaxes/wdl.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "WDL Enhanced Colors",
        "uiTheme": "vs-dark",
        "path": "./themes/wdl-color-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npx tsc -p ./",
    "watch": "npx tsc -watch -p ./",
    "package": "vsce package",
    "build": "npm run compile && npm run package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.0",
    "vscode-languageserver": "^8.0.0",
    "vscode-languageserver-textdocument": "^1.0.0"
  }
}